<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemlayout">
        <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:text="@string/notavailable"
                android:id="@+id/name"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginTop="15dp" android:textSize="20dp"
                android:textStyle="bold" android:textColor="@color/white"/>
        <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:text="@string/notavailable"
                android:id="@+id/city"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_below="@+id/name" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false" android:layout_marginTop="5dp" android:textSize="15dp"
                android:textStyle="italic" android:textColor="@color/white"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="@string/notavailable"
                android:id="@+id/description"
                android:layout_below="@+id/city" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:textSize="10dp" android:textColor="@color/white"/>
        <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="@string/notavailable"
                android:id="@+id/date"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_marginTop="15dp" android:textSize="10dp"
                android:textStyle="bold" android:textColor="@color/white"/>
        <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="@string/notavailable"
                android:id="@+id/time"
                android:layout_alignTop="@+id/city" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:textSize="10dp" android:textStyle="bold"
                android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>