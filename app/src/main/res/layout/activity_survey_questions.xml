<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_title"
            android:id="@+id/textViewNaslov" android:textSize="30dp"
            android:gravity="bottom" android:textColor="#FFF"
            android:layout_gravity="center_horizontal" android:layout_marginBottom="50dp"/>
    <ViewSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewSwitcher" android:focusable="false" android:layout_weight="1">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center"
                android:id="@+id/holder">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewFirst"
                    android:layout_weight="1" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewSecond" android:layout_weight="1"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        </LinearLayout>
    </ViewSwitcher>
</LinearLayout>